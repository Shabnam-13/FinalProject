@model FinalProject_Eduhome.Models.EventInfo

@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Update</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>EventInfo</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        <div class="col-md-10">
            <label>Event</label>
            <select class="form-control" name="EventId">
                <option value="value">Choose</option>
                @foreach (var item in ViewBag.Events)
                {
                    <option value="@item.Id" @(item.Id == Model.EventId ? "selected" : "")>@item.Title</option>
                }
            </select>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <label>Speaker</label>
            <select class="form-control" name="SpeakerId">
                <option value="value">Choose</option>
                @foreach (var item in ViewBag.Speakers)
                {
                    <option value="@item.Id" @(item.Id == Model.SpeakerId ? "selected" : "")>@item.FullName</option>
                }
            </select>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
