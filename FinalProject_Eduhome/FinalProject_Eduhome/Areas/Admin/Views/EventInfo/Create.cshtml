@model FinalProject_Eduhome.Models.EventInfo

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>EventInfo</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        <div class="col-md-10">
            <label>Events</label>
            <select class="form-control" name="EventId">
                <option value="value">Choose</option>
                @foreach (var item in ViewBag.Events)
                {
                    <option value="@item.Id">@item.Title</option>
                }
            </select>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <label>Speakers</label>
            <select class="form-control" name="SpeakerId">
                <option value="value">Choose</option>
                @foreach (var item in ViewBag.Speakers)
                {
                    <option value="@item.Id">@item.FullName</option>
                }
            </select>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
