@model IEnumerable<FinalProject_Eduhome.Models.About>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<table class="table table-responsive">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VideoLink)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Copyright)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Logo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BgImage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PrllxImage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Icon)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IconWhite)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Title)
    </td>
    <td>
        @(item.Content.Length>50? item.Content.Substring(0,50):item.Content)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.VideoLink)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Copyright)
    </td>
    <td>
        <img src="~/Uploads/@item.Logo" alt="@item.Logo" width="100" />
    </td>
    <td>
        <img src="~/Uploads/@item.Image" alt="@item.Image" width="100" />
    </td>
    <td>
        <img src="~/Uploads/@item.BgImage" alt="@item.BgImage" width="100" />
    </td>
    <td>
        <img src="~/Uploads/@item.PrllxImage" alt="@item.PrllxImage" width="100" />
    </td>
    <td>
        <img src="~/Uploads/@item.Icon" alt="@item.Icon" width="100" />
    </td>
    <td>
        <img src="~/Uploads/@item.IconWhite" alt="@item.IconWhite" width="100" />
    </td>
    <td>
        @Html.ActionLink("Edit", "Update", new { id = item.Id }) |
        <a href="@Url.Action("Delete","About", new { id = item.Id })" onclick="return confirm('Are you sure?')">Delete</a>
    </td>
</tr>
}

</table>
