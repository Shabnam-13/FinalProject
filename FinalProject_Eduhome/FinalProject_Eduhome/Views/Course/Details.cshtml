@model FinalProject_Eduhome.ViewModels.HomeVM
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.EduTitle = "COURSES DETAILS";
}

<!-- Banner Area Start -->
@{
    Html.RenderPartial("~/Views/Shared/Banner.cshtml", Model);
}
<!-- Banner Area End -->
<!-- Blog Start -->
<div class="courses-details-area blog-area pt-150 pb-140">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="courses-details">
                    <div class="courses-details-img">
                        <img src="~/Uploads/@Model.course.Image" alt="courses-details" style="width:100%">
                    </div>
                    <div class="course-details-content">
                        <h2>@Model.course.Name</h2>
                        <p> @Model.course.Content </p>
                        <div class="course-details-left">
                            <div class="single-course-left">
                                <h3>about course</h3>
                                <p>@Model.course.About</p>
                            </div>
                            <div class="single-course-left">
                                <h3>how to apply</h3>
                                <p>@Model.course.Apply</p>
                            </div>
                            <div class="single-course-left">
                                <h3>certification</h3>
                                <p class="margin">@Model.course.Certification</p>
                            </div>
                        </div>
                        <div class="course-details-right">
                            <h3>COURSE FEATURES</h3>
                            <ul>
                                <li>starts <span>@Model.course.StartDate</span></li>
                                <li>duration <span>@Model.course.Duration</span></li>
                                <li>class duration <span>@Model.course.ClassDuration</span></li>
                                <li>skill level <span>@Model.course.SkillLevel</span></li>
                                <li>language <span>@Model.course.Language</span></li>
                                <li>students <span>@Model.course.Students</span></li>
                                <li>assesments <span>@Model.course.Assessments</span></li>
                            </ul>
                            <h3 class="red">course fee @Model.course.Price</h3>
                        </div>
                    </div>

                    <!-- Message Area Start -->
                    @{
                        Html.RenderPartial("~/Views/Shared/Message.cshtml", new FinalProject_Eduhome.ViewModels.MessageVM { Page = "CourseDetails", ItemId = Model.course.Id });
                    }
                    <!-- Message Area End -->
                </div>
            </div>

            <!-- Sidebar Area Start -->
            <div class="col-md-4">
                <div class="blog-sidebar right">
                    <!-- Search Start -->
                    @{
                        Html.RenderPartial("~/Views/Shared/Search.cshtml", new FinalProject_Eduhome.ViewModels.SearchVM { Page = "Course" });
                    }
                    <!-- Search End -->
                    <div class="single-blog-widget mb-50">
                        <h3>categories</h3>
                        <ul>
                            @foreach (var item in Model.Categories)
                            {
                                <li><a href="#">@item.Name (@(item.Courses!=null?item.Courses.Count:0))</a></li>
                            }
                        </ul>
                    </div>
                    @{
                        Html.RenderPartial("~/Views/Shared/Sidebar.cshtml", Model.Blogs);
                    }
                </div>
            </div>
            <!-- Sidebar Area End -->

        </div>
    </div>
</div>
<!-- Blog End -->
<!-- Subscribe Start -->
@{
    Html.RenderPartial("~/Views/Shared/Subscribe.cshtml", new FinalProject_Eduhome.ViewModels.SubscribeVM { Page = "CourseDetails", ItemId = Model.course.Id });
}
<!-- Subscribe End -->
