@model List<FinalProject_Eduhome.Models.Teachers>
<div class="row">

    @foreach (var item in Model)
    {
        <div class="col-md-3 col-sm-4 col-xs-12">
            <div class="single-teacher mb-45">
                <div class="single-teacher-img">
                    <a href="@Url.Action("Details","Teacher",new { id=item.Id})"><img src="~/Uploads/@item.Image" alt="teacher" style="width:100%"></a>
                </div>
                <div class="single-teacher-content text-center">
                    <h2><a href="@Url.Action("Details","Teacher",new { id=item.Id})">@item.FullName </a></h2>
                    <h4> @item.Position.Name</h4>
                    <ul>
                        @foreach (var socNet in item.Socials)
                        {
                            <li><a href="@socNet.Link"><i class="@socNet.IconClass"></i></a></li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    }
</div>