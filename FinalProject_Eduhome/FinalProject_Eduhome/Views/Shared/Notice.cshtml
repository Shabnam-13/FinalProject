@model List<FinalProject_Eduhome.Models.Event>
<section class="notice-area two pt-140 pb-50">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="notice-right-wrapper mb-25 pb-25">
                    <h3>TAKE A VIDEO TOUR</h3>
                    <div class="notice-video">
                        <div class="video-icon video-hover">
                            <a class="video-popup" href="@ViewBag.About.VideoLink">
                                <i class="zmdi zmdi-play"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="notice-left-wrapper">
                    <h3>notice board</h3>
                    <div class="notice-left">
                        @foreach (var item in Model)
                        {
                            <div class="single-notice-left mb-23 pb-20">
                                <h4>@item.EventDate.ToString("dd MMMM yyyy")</h4>
                                <p> @(item.Content.Length > 100 ? Html.Raw(item.Content.Substring(0, 100)) : Html.Raw(item.Content))</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
